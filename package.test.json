{
  "name": "yield-shop-tests",
  "version": "1.0.0",
  "description": "Test suite for YieldShop platform",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:contracts": "hardhat test",
    "test:database": "jest test/database.test.ts",
    "test:integration": "jest test/integration.test.ts",
    "test:all": "npm run test:contracts && npm run test",
    "coverage": "jest --coverage --collectCoverageFrom='lib/**/*.ts' --collectCoverageFrom='components/**/*.tsx'"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@supabase/supabase-js": "^2.39.0",
    "@types/jest": "^29.5.11",
    "chai": "^4.4.1",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/test"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "components/**/*.tsx",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
